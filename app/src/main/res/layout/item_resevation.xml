<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:layout_marginTop="24dp"
        android:radius="16dp"
        android:backgroundTint="@color/card_background"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/card_inner_background"
            android:layout_gravity="center">

            <!-- TextView pour le nom -->
            <TextView
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom: John Doe"
                android:textSize="18sp"
                android:textColor="@color/nameTextColor"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:ellipsize="end"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/textEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: john.doe@example.com"
                android:textSize="16sp"
                android:textColor="@color/emailTextColor"
                android:layout_marginBottom="12dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- TextView pour la chambre -->
            <TextView
                android:id="@+id/textRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chambre: 101"
                android:textSize="16sp"
                android:textColor="@color/roomTextColor"
                android:textStyle="italic"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- LinearLayout horizontal pour le bouton de suppression -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Button pour supprimer Ã  gauche -->
                <Button
                    android:id="@+id/deleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supprimer"
                    android:backgroundTint="@color/redColor"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
